<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Change Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_change_label" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Change Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_change_description"
            app:layout_constraintTop_toBottomOf="@+id/btn_change_label" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
    <Switch
            android:text="Enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sw_enabled"
            app:layout_constraintTop_toTopOf="@+id/btn_change_label"
            app:layout_constraintBottom_toBottomOf="@+id/btn_change_label" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:checked="true"/>
    <Switch
            android:text="Checkable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sw_checkable"
            app:layout_constraintTop_toTopOf="@+id/btn_change_description"
            app:layout_constraintBottom_toBottomOf="@+id/btn_change_description"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:checked="true"/>

    <com.awolity.settingsviews.ButtonSetting
            android:id="@+id/bs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            custom:iconDrawableResource="@drawable/ic_1"
            custom:disabledColor="@color/colorDisabled"
            custom:labelColor="@color/colorText"
            custom:backgroundColor="@color/colorBg"
            custom:descriptionColor="@color/colorTextDark"
            custom:labelText="Label text"
            custom:descriptionText="Description text, a little longer, can be multiple lines, lorem ipsum dolor sit amet s치l치l치l치"
            custom:isCheckable="true"
            app:layout_constraintTop_toBottomOf="@+id/btn_change_disabled_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Change Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_change_icon" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn_change_description"/>
    <Button
            android:text="Title color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_change_title_color"
            app:layout_constraintTop_toBottomOf="@+id/btn_change_icon"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="Description color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_change_description_color"

            app:layout_constraintTop_toTopOf="@+id/btn_change_title_color" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="Disabled color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_change_disabled_color"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_change_title_color"/>
    <Button
            android:text="Backgrund color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_change_background_color"
            app:layout_constraintTop_toTopOf="@+id/btn_change_disabled_color" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

